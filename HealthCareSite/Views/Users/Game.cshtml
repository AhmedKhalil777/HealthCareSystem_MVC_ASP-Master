@model HealthCareSite.Models.User

@{
     Layout = "~/Views/Shared/_UserMaster.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Game</title>
    <script src="~/Scripts/d3.v4.min.js"></script>
    <script src="~/Scripts/checkers-engine.js"></script>
</head>
<body>


    <button onclick="startGame({x: 0, y: 0}, 70, boardCanvas);">Start New Game</button>
    <button id="btnReplay" style="display:none;" onclick="replayAll({x: 0, y: 0}, 70, boardCanvas)">View Replay</button><br /><br />
    <div style=" background-size:30%,30%;    ">
        @Html.DisplayNameFor(model => model.Name) :


        @Html.DisplayFor(model => model.Name)
        <br />

        <img src="@Html.DisplayFor(model => model.Pic) " style="width:30% ; height:30%">





    </div>
    <svg id="checkersBoard" width="560" height="560" style="float:left; margin-right: 50px;"></svg>

    <script type="text/javascript">
        var boardCanvas = d3.select("#checkersBoard");
        startGame({ x: 0, y: 0 }, 70, boardCanvas);
    </script>
    <div>
        <h4>User</h4>
        <hr />

    </div>

</body>
</html>
